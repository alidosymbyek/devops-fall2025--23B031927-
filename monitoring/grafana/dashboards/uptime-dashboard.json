      },
      {
        "id": 2,
        "title": "Service Health Status",
        "type": "table",
        "datasource": {
          "type": "postgresql",
          "uid": "postgres"
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "postgres"
            },
            "editorMode": "code",
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT service_name, status, response_time_ms, error_message, timestamp FROM monitoring.uptime_log WHERE timestamp >= NOW() - INTERVAL '1 hour' ORDER BY timestamp DESC LIMIT 50",
            "refId": "A",
            "sql": {
              "columns": [
                {
                  "parameters": [],
                  "type": "function"
                }
              ],
              "groupBy": [
                {
                  "property": {
                    "type": "string"
                  },
                  "type": "groupBy"
                }
              ],
              "limit": 50
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Uptime Trend (Last 24 Hours)",
        "type": "timeseries",
        "datasource": {
          "type": "postgresql",
          "uid": "postgres"
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "postgres"
            },
            "editorMode": "code",
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT timestamp AS time, (SUM(CASE WHEN status = 'healthy' THEN 1 ELSE 0 END)::float / COUNT(*)::float * 100) AS uptime_percentage FROM monitoring.uptime_log WHERE timestamp >= NOW() - INTERVAL '24 hours' GROUP BY DATE_TRUNC('hour', timestamp) ORDER BY time",
            "refId": "A",
            "sql": {
              "columns": [
                {
                  "parameters": [],
                  "type": "function"
                }
              ],
              "groupBy": [
                {
                  "property": {
                    "type": "string"
                  },
                  "type": "groupBy"
                }
              ],
              "limit": 50
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 99.5, "color": "green"}
              ]
            }
          },
          "overrides": []
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Daily Uptime Summary",
        "type": "table",
        "datasource": {
          "type": "postgresql",
          "uid": "postgres"
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "postgres"
            },
            "editorMode": "code",
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT date, total_checks, healthy_checks, unhealthy_checks, uptime_percentage, status FROM monitoring.uptime_summary WHERE date >= CURRENT_DATE - INTERVAL '7 days' ORDER BY date DESC",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
