      {
        "id": 2,
        "title": "Recent Health Check History (Last Hour)",
        "type": "table",
        "datasource": {
          "type": "postgresql",
          "uid": "postgres"
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "postgres"
            },
            "editorMode": "code",
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT service_name, status, ROUND(response_time_ms::numeric, 1) as response_time_ms, error_message, timestamp FROM monitoring.uptime_log WHERE timestamp >= NOW() - INTERVAL '1 hour' ORDER BY timestamp DESC LIMIT 50",
