            "editorMode": "code",
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT service_name, status, ROUND(response_time_ms::numeric, 1) as response_time_ms, timestamp FROM (SELECT DISTINCT ON (service_name) service_name, status, response_time_ms, timestamp FROM monitoring.uptime_log ORDER BY service_name, timestamp DESC) latest ORDER BY service_name",
