    "panels": [
      {
        "id": 5,
        "title": "Current Status (Right Now)",
        "type": "stat",
        "datasource": {
          "type": "postgresql",
          "uid": "postgres"
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "postgres"
            },
            "editorMode": "code",
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT ROUND((SUM(CASE WHEN status = 'healthy' THEN 1 ELSE 0 END)::float / COUNT(*)::float * 100)::numeric, 1) as current_uptime FROM (SELECT DISTINCT ON (service_name) service_name, status FROM monitoring.uptime_log ORDER BY service_name, timestamp DESC) latest_checks",
            "refId": "A",
            "sql": {
              "columns": [
                {
                  "parameters": [],
                  "type": "function"
                }
              ],
              "groupBy": [
                {
                  "property": {
                    "type": "string"
                  },
                  "type": "groupBy"
                }
              ],
              "limit": 50
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 99.5, "color": "green"}
              ]
            },
            "mappings": [],
            "displayName": "Current Uptime %"
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "description": "Shows the current health status based on the most recent check for each service. This reflects the RIGHT NOW status, not historical average."
      },
      {
